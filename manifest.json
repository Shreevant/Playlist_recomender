{
  "manifest_version": 3,
  "name": "AI Career Playlist Builder",
  "version": "1.0.0",
  "description": "Discover the skills you need for your dream career and get personalized learning resources powered by AI.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:8080/*",
    "https://*.googleapis.com/*",
    "https://www.youtube.com/*",
    "https://books.google.com/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "AI Career Playlist Builder"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["*.js", "*.css", "*.html"],
      "matches": ["<all_urls>"]
    }
  ]
}